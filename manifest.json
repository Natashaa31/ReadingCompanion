{
  "manifest_version": 3,
  "name": "AI Reading Companion",
  "version": "1.0",
  "description": "Summarize, translate, and explain any webpage.",
  "permissions": [         
    "activeTab",   
    "storage"     
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}